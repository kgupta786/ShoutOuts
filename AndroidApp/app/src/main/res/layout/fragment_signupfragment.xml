<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.keshavgupta.shoutouts.signupfragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvsignin"
            android:textSize="45sp"
            android:fontFamily="cursive"
            android:layout_marginTop="70dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:inputType="textEmailAddress"
            android:id="@+id/etsignemail"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="30dp"
            android:hint="Register your Email-Id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:inputType="textEmailAddress"
            android:layout_marginTop="10dp"
            android:id="@+id/etsignguardemail"
            android:layout_marginHorizontal="30dp"
            android:hint="Guardian Email-Id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:inputType="numberPassword"
            android:id="@+id/etsignpass"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="30dp"
            android:hint="Enter Numerical Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <EditText
            android:inputType="numberPassword"
            android:id="@+id/etsignconpass"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="30dp"
            android:hint="Confirm Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/btsignup"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="40dp"
            android:text="Sign-Up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


</FrameLayout>
